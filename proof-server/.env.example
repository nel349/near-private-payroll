# Proof Server Configuration
# Copy this file to .env and customize

# Server settings
HOST=0.0.0.0
PORT=3000

# Development mode - generates mock proofs (no real ZK proving)
# Set to 'true' for local development/testing
DEV_MODE=true

# Use Bonsai API for proof generation (faster, but requires API key)
# Set to 'true' and provide BONSAI_API_KEY for cloud proving
USE_BONSAI=false
BONSAI_API_KEY=

# Attestation signing key (32 bytes, hex encoded)
# If not set, a random key is generated on startup
# For production, set a persistent key!
ATTESTATION_SECRET_KEY=

# Require TEE (fail if not available)
REQUIRE_TEE=false

# Force TEE type (for testing)
# Options: sgx, tdx, sev
# TEE_TYPE=

# Logging
LOG_LEVEL=info
JSON_LOGS=false

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Rate limiting
MAX_CONCURRENT_PROOFS=10
